{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2020",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "useDefineForClassFields": true,
        "checkJs": true,
        "sourceMap": true,
        "jsx": "react-jsx",
        "jsxImportSource": "dom-renderer",
        "lib": ["ES6", "DOM"],
        "outDir": "dist"
    },
    "include": ["src/**/*", "*.mjs"]
}
